      <id>oss-snapshot</id>
      <name>oss-snapshot</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>jug-nexus-snapshot</id>
      <name>jug-nexus-snapshot</name>
      <url>http://nexus.jug-montpellier.org/repository/snapshots/</url>
    </repository>
    <repository>
      <id>jug-nexus-release</id>
      <name>jug-nexus-release</name>
      <url>http://nexus.jug-montpellier.org/repository/releases/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>oss-snapshot</id>
      <name>oss-snapshot</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </pluginRepository>
  </pluginRepositories>
</project>
